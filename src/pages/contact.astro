---
import ContactsForm from '../components/ContactsForm.astro';
import Layout from '../layouts/Layout.astro';

import productsData from '../products.json';

const contactInfo = productsData.contact;

---

<!-- Contact Us -->
<Layout title="Contact Jain Hydraulics Recycling (JHR): Manufacturers of Hydraulic Scrap, Shears, and Balers" description='Get in touch with Jain Hydraulics Recycling through our Contact Us page. Whether you have questions, need assistance, or want to explore collaborations, our team is here for you. Start your sustainable journey with us today; +91 9911574941 +91 9289250015'>
    <div class="max-w-[85rem] mx-auto px-4 sm:px-6 lg:px-8 py-10 lg:py-16">
        <div class="grid md:grid-cols-2 gap-8">
            <div class="order-2 md:mt-[15%]">
                <div class="grid gap-y-8">
                    <div class="gap-2 flex flex-col border p-8 rounded-lg border-gray-200">
                        <h3 class="font-semibold text-xl text-gray-800 dark:text-gray-200">Address</h3>
                        <address class="font-medium not-italic gap-2 text-gray-700 flex flex-col">
                            {
                                contactInfo.address.map((item, index) => (
                                
                                <p class="text-gray-600 dark:text-gray-700 inline-flex flex-wrap gap-x-2  dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600">
                                    <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" width="24" height="24" > <g id="SVGRepo_bgCarrier" stroke-width="0"></g> <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round" ></g> <g id="SVGRepo_iconCarrier">
                                        <path ill-rule="evenodd"clip-rule="evenodd"d="M2 2V22H22V2H2ZM4 4H20V20H4V4ZM10 6H14V18H10V6ZM6 8H8V16H6V8ZM16 8H18V16H16V8ZM6 18V20H8V18H6ZM10 18V20H14V18H10ZM16 18V20H18V18H16Z"fill="currentColor"></path>
                                    </g>
                                    </svg>
                                    { index === 1 ?
                                        <span>Service Center:</span> : <span>Headquaters:</span> }
                                        {item}
                                        
                                </p>
                                ))
                            }
                        </address>
                        
                    </div>
                    <div class="gap-2 flex flex-col border p-8 rounded-lg border-gray-200">
                        <h3 class="font-semibold text-xl text-gray-800 dark:text-gray-200">Phone Numbers</h3>
                        <p class="font-medium inline-flex gap-x-2 flex-wrap text-gray-700">
                            <svg class="w-5 h-5 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 18">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m16.344 12.168-1.4-1.4a1.98 1.98 0 0 0-2.8 0l-.7.7a1.98 1.98 0 0 1-2.8 0l-2.1-2.1a1.98 1.98 0 0 1 0-2.8l.7-.7a1.981 1.981 0 0 0 0-2.8l-1.4-1.4a1.828 1.828 0 0 0-2.8 0C-.638 5.323 1.1 9.542 4.78 13.22c3.68 3.678 7.9 5.418 11.564 1.752a1.828 1.828 0 0 0 0-2.804Z"/>
                            </svg>
                            Sales:
                            {
                                contactInfo.phoneSales.map((item) => (
                                    <a class="text-gray-600 hover:text-gray-500 dark:text-gray-700 dark:hover:text-gray-200 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600 " href={`tel:${item}`}> {item} </a>   
                                ))
                            }
                        </p>
                        <p class="font-medium inline-flex gap-x-2 flex-wrap text-gray-700">
                            <svg class="w-5 h-5 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 18">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m16.344 12.168-1.4-1.4a1.98 1.98 0 0 0-2.8 0l-.7.7a1.98 1.98 0 0 1-2.8 0l-2.1-2.1a1.98 1.98 0 0 1 0-2.8l.7-.7a1.981 1.981 0 0 0 0-2.8l-1.4-1.4a1.828 1.828 0 0 0-2.8 0C-.638 5.323 1.1 9.542 4.78 13.22c3.68 3.678 7.9 5.418 11.564 1.752a1.828 1.828 0 0 0 0-2.804Z"/>
                            </svg>
                            Support:
                            {
                                contactInfo.phoneSupport.map((item) => (
                                    <a class=" text-gray-600 hover:text-gray-500 dark:text-gray-700 dark:hover:text-gray-200 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href={`tel:${item}`}> {item} </a>   
                                ))
                            }
                        </p>
                        <p class="font-medium inline-flex flex-wrap gap-x-2 text-gray-700">
                            <svg class="w-5 h-5 text-gray-800 dark:text-white" fill="#000000" version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 308 308" xml:space="preserve">
                                <g id="XMLID_468_">
