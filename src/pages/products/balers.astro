---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import SecondaryNav from "../../components/SecondaryNav.astro";
import productData from "../../products.json";

const balers = productData.balers;
const balerNames = productData.balers.types;
const balerKeys = [];

//Convert the names to access object keys, replace space with _, and converts to lowerCase
balerNames.forEach(element => {
	element = element.toLowerCase().replaceAll(" ", "_");
	balerKeys.push(element);
});

const balerImages = await Astro.glob("../../images/Products/Balers/*");
---

<Layout title="Manufacturer of Scrap Baling Machine, Baler Machine, and Waste Processing Hydraulic Balers" description="At Jain Hydraulics Recycling, our hydraulic baler machines redefine scrap metal and waste compression. Expertly designed, our hydraulic baling press creates dense blocks, enhancing the density of both ferrous and non-ferrous metals. As India's foremost hydraulic scrap baling machine manufacturer, we lead the industry, reducing storage and transportation costs while facilitating seamless handling and furnace charging.">
	<SecondaryNav product="balers" images={balerImages} names={balerNames} />

	<!-- Card Blog -->
	<div class="max-w-[95rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
		<!-- Grid -->
		<div class="grid sm:grid-cols-2 gap-6 lg:gap-18">

			{
			
				balerNames.map((item, index) => (
				
					<div class="group flex flex-col bg-white border border-gray-200 shadow-sm rounded-xl dark:bg-slate-900 dark:border-gray-700 dark:shadow-slate-700/[.7]">
						<div class="h-64 flex w-full flex-col justify-center items-center rounded-t-xl py-2">
							<Image class="h-full w-auto object-scale-down" src={balerImages[index].default} alt={item} />
						</div>
						<div class="p-4 md:p-6">
							<span class="block mb-1 text-xs font-semibold uppercase text-blue-600 dark:text-blue-500">
							{ balers[balerKeys[index]].industry }
							</span>
							<h3 class="text-xl font-semibold text-gray-800 dark:text-gray-300 dark:hover:text-white">
							{`${item} Baler`}
							</h3>
							<p class="mt-3 text-gray-500">
							{ balers[balerKeys[index]].description }
							</p>
						</div>
						<div class="mt-auto flex border-t border-gray-200 divide-x divide-gray-200 dark:border-gray-700 dark:divide-gray-700">
							<a class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-es-xl bg-white text-gray-800 shadow-sm hover:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-white dark:hover:bg-gray-800 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href={`/products/balers/${item.toLowerCase().replace(/ /g, "-")}`}>
							Learn More
							</a>
						</div>
					</div>
				
				))
			
			}


		</div>
		<!-- End Grid -->
	</div>
	<!-- End Card Blog -->

</Layout>
