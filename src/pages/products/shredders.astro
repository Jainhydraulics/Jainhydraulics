---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import SecondaryNav from "../../components/SecondaryNav.astro";
import productData from "../../products.json";

const shredders = productData.shredders;
const shredderNames = productData.shredders.types;
const shredderKeys = [];

//Convert the names to access object keys, replace space with _, and converts to lowerCase
shredderNames.forEach(element => {
	element = element.toLowerCase().replaceAll(" ", "_");
	shredderKeys.push(element);
});

const shredderImages = await Astro.glob("../../images/Products/Shredders/*");
---

<Layout title="Manufacturer of Scrap Metal Shredding Machine, Shredder Machine, and Waste Processing Hydraulic and Electric Shredders" description="Transform waste into opportunity with Jain Hydraulics Recycling's Hydraulic and Electric shredder machines. Dive into our user-friendly catalog featuring a variety of precision-engineered shredder machines, each tailored for efficient metal scrap processing and waste recycling, setting a new standard for sustainability.">
	<SecondaryNav product="shredders" images={shredderImages} names={shredderNames} />

	<!-- Card Blog -->
	<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
		<!-- Grid -->
		<div class="grid sm:grid-cols-2 gap-6 lg:gap-18">

			{
			
				shredderNames.map((item, index) => (
				
					<div class="group flex flex-col bg-white border border-gray-200 shadow-sm rounded-xl dark:bg-slate-900 dark:border-gray-700 dark:shadow-slate-700/[.7]">
						<div class="h-52 flex w-full flex-col justify-center items-center rounded-t-xl py-2">
							<Image class="h-full w-auto object-scale-down" src={shredderImages[index].default} alt={item} />
						</div>
						<div class="p-4 md:p-6">
							<span class="block mb-1 text-xs font-semibold uppercase text-blue-600 dark:text-blue-500">
							{ shredders[shredderKeys[index]].industry }
							</span>
							<h3 class="text-xl font-semibold text-gray-800 dark:text-gray-300 dark:hover:text-white">
							{`${item} Shredder`}
							</h3>
							<p class="mt-3 text-gray-500">
							{ shredders[shredderKeys[index]].description }
							</p>
						</div>
						<div class="mt-auto flex border-t border-gray-200 divide-x divide-gray-200 dark:border-gray-700 dark:divide-gray-700">
							<a class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-es-xl bg-white text-gray-800 shadow-sm hover:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-slate-900 dark:border-gray-700 dark:text-white dark:hover:bg-gray-800 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href={`/products/shredders/${item.toLowerCase()}`}>
							Learn More
							</a>
						</div>
					</div>
				
				))
			
			}


		</div>
		<!-- End Grid -->
	</div>
	<!-- End Card Blog -->

</Layout>
