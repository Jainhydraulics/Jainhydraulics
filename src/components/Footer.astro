---
import productData from "../products.json";

import { Image } from "astro:assets";

import logo from "../images/jhr_logo.png";

const balerNames = productData.balers.types;

const shearNames = productData.shears.types;

const shredderNames = productData.shredders.types;

const contactInfo = productData.contact;

const socials = productData.socials;

const chipProcessing = productData.chipProcessing;

const chipProcessingNames = productData.chipProcessing.types;

---

<footer class="px-4 sm:px-6 lg:px-8 py-8 lg:py-12 bg-gray-800">
    <div class="mx-auto grid gap-y-6 md:gap-y-6 md:gap-x-0 grid-cols-12">

        <div class="col-span-full text-center">
            <a class="flex-none text-xl font-semibold text-gray-300 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href="/" aria-label="Brand">
                <Image class="max-w-52 mx-auto" src={logo} alt="Jain Hydraulics Recycling Logo" />
            </a>
            <p class="text-gray-200 mt-2 px-8 md:px-0 md:text-center ">India's Top Manufacturer of Scrap Metal Baling, Shredding, and Shearing Machines</p>
        </div>

        <div class="col-span-full md:col-span-4">
            <h4 class="text-xs font-semibold text-gray-300 text-center uppercase dark:text-gray-100 mb-2"><a class="hover:text-gray-100" href="/products/balers/">Balers</a></h4>
            
            <div class="grid grid-cols-12 gap-2 md:grid-cols-2 md:gap-4 text-sm text-center">
                {
                    balerNames.map((item) => (
                        <a class="col-span-4 md:col-auto text-gray-400 hover:text-gray-500 dark:text-gray-400 dark:hover:text-gray-200 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href={`/products/balers/${item.toLowerCase().replace(/ /g, "-")}`}>
                            {item}
                        </a>
                    ))
                }
            </div>
        </div>
        <!-- End Col -->
        
        <div class="col-span-6 md:col-span-2 mx-auto text-center">
            <h4 class="text-xs font-semibold text-gray-300 uppercase dark:text-gray-100 text-center mb-2"><a class="hover:text-gray-100" href="/products/shears/">Shears</a></h4>
            
            <div class="grid grid-cols-12 md:grid-cols-2 gap-2 md:gap-4 text-sm">
                {
                    shearNames.map((item) => (
                            <a class="col-span-6 md:col-span-auto text-gray-400 hover:text-gray-500 dark:text-gray-400 dark:hover:text-gray-200 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href={`/products/shears/${item.toLowerCase().replace(/ /g, "-")}`}>
                                {item}
                            </a>
                    ))
                }
            </div>
        </div>
        <!-- End Col -->
        
        <div class="col-span-6 md:col-span-2 mx-auto text-center">
            <h4 class="text-xs font-semibold text-gray-300 uppercase dark:text-gray-100 text-center mb-2"><a class="hover:text-gray-100" href="/products/shredders/">Shredders</a></h4>
            
            <div class="grid gap-2 md:gap-4 text-sm">
                {
                    shredderNames.map((item) => (
                        <a class=" md:col-span-auto text-gray-400 hover:text-gray-500 dark:text-gray-400 dark:hover:text-gray-200 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href={`/products/shredders/${item.toLowerCase().replace(/ /g, "-")}`}>
                            {item}
                        </a>
                    
                    ))
                }
            </div>
        </div>
        <!-- End Col -->

        <div class="col-span-6 md:col-span-2 mx-auto text-center">
            <h4 class="text-xs font-semibold text-gray-300 uppercase dark:text-gray-100 text-center mb-2">Cranes & Chip Processing</h4>
            
            <div class="grid gap-2 md:gap-4 text-sm">
                {
                    chipProcessingNames.map((item) => (
                        <a class="md:col-span-auto text-gray-400 hover:text-gray-500 dark:text-gray-400 dark:hover:text-gray-200 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href={`/products/cranes and chip processing/${item.toLowerCase().replace(/ /g, "-")}`}>
                            {item}
                        </a>
                    ))
                }
            </div>
        </div>
        <!-- End Col -->

        <div class="col-span-6 md:col-span-2 text-center">
            <h4 class="text-xs font-semibold text-gray-300 uppercase dark:text-gray-100 text-center mb-2">Social</h4>
            
            <div class="grid gap-2 md:gap-4 text-sm">
                <a class=" md:col-span-auto text-gray-400 hover:text-gray-500 dark:text-gray-400 dark:hover:text-gray-200 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href={socials.instagram} target="_blank" rel="noopener noreferrer">
                    Instagram
                </a>
                <a class=" md:col-span-auto text-gray-400 hover:text-gray-500 dark:text-gray-400 dark:hover:text-gray-200 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href={socials.linkedin} target="_blank" rel="noopener noreferrer">
                    LinkedIn
                </a>
                <a class="md:col-span-auto text-gray-400 hover:text-gray-500 dark:text-gray-400 dark:hover:text-gray-200 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href={socials.youtube} target="_blank" rel="noopener noreferrer">
                    YouTube
                </a>
            </div>
        </div>
        <!-- End Col -->

       
        <hr class="h-[1px] md:my-4 bg-gray-200 col-span-full border-0 dark:bg-gray-700">

        <div class="col-span-full md:col-span-4 md:mx-auto">
            <div class="grid gap-2">
                <h4 class="text-xs font-semibold text-gray-300 uppercase dark:text-gray-100">Contact Us</h4>
                <p class="font-medium inline-flex flex-wrap gap-x-2 text-gray-400">
                    <svg class="w-5 h-5 text-gray-200 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 18">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m16.344 12.168-1.4-1.4a1.98 1.98 0 0 0-2.8 0l-.7.7a1.98 1.98 0 0 1-2.8 0l-2.1-2.1a1.98 1.98 0 0 1 0-2.8l.7-.7a1.981 1.981 0 0 0 0-2.8l-1.4-1.4a1.828 1.828 0 0 0-2.8 0C-.638 5.323 1.1 9.542 4.78 13.22c3.68 3.678 7.9 5.418 11.564 1.752a1.828 1.828 0 0 0 0-2.804Z"/>
                    </svg>
                    Sales
                    {
                        contactInfo.phoneSales.map((item) => (
                            <a class="text-gray-300  hover:text-gray-500 dark:text-gray-400 dark:hover:text-gray-200 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href={`tel:${item}`}> {item} </a>   
                        ))
                    }
                </p>
                <p class="font-medium inline-flex flex-wrap gap-x-2 text-gray-400">
                    <svg class="w-5 h-5 text-gray-200 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 18">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m16.344 12.168-1.4-1.4a1.98 1.98 0 0 0-2.8 0l-.7.7a1.98 1.98 0 0 1-2.8 0l-2.1-2.1a1.98 1.98 0 0 1 0-2.8l.7-.7a1.981 1.981 0 0 0 0-2.8l-1.4-1.4a1.828 1.828 0 0 0-2.8 0C-.638 5.323 1.1 9.542 4.78 13.22c3.68 3.678 7.9 5.418 11.564 1.752a1.828 1.828 0 0 0 0-2.804Z"/>
                    </svg>
                    Support
                    {
                        contactInfo.phoneSupport.map((item) => (
                            <a class=" text-gray-300 hover:text-gray-500 dark:text-gray-400 dark:hover:text-gray-200 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href={`tel:${item}`}> {item} </a>   
                        ))
                    }
                </p>
                <p class="font-medium inline-flex flex-wrap gap-x-2 text-gray-400">
                    <svg class="w-5 h-5 text-white dark:text-white" fill="#ffffff" version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 308 308" xml:space="preserve">
                        <g id="XMLID_468_">
                            <path id="XMLID_469_" d="M227.904,176.981c-0.6-0.288-23.054-11.345-27.044-12.781c-1.629-0.585-3.374-1.156-5.23-1.156   c-3.032,0-5.579,1.511-7.563,4.479c-2.243,3.334-9.033,11.271-11.131,13.642c-0.274,0.313-0.648,0.687-0.872,0.687   c-0.201,0-3.676-1.431-4.728-1.888c-24.087-10.463-42.37-35.624-44.877-39.867c-0.358-0.61-0.373-0.887-0.376-0.887   c0.088-0.323,0.898-1.135,1.316-1.554c1.223-1.21,2.548-2.805,3.83-4.348c0.607-0.731,1.215-1.463,1.812-2.153   c1.86-2.164,2.688-3.844,3.648-5.79l0.503-1.011c2.344-4.657,0.342-8.587-0.305-9.856c-0.531-1.062-10.012-23.944-11.02-26.348   c-2.424-5.801-5.627-8.502-10.078-8.502c-0.413,0,0,0-1.732,0.073c-2.109,0.089-13.594,1.601-18.672,4.802   c-5.385,3.395-14.495,14.217-14.495,33.249c0,17.129,10.87,33.302,15.537,39.453c0.116,0.155,0.329,0.47,0.638,0.922   c17.873,26.102,40.154,45.446,62.741,54.469c21.745,8.686,32.042,9.69,37.896,9.69c0.001,0,0.001,0,0.001,0   c2.46,0,4.429-0.193,6.166-0.364l1.102-0.105c7.512-0.666,24.02-9.22,27.775-19.655c2.958-8.219,3.738-17.199,1.77-20.458   C233.168,179.508,230.845,178.393,227.904,176.981z"/>
                            <path id="XMLID_470_" d="M156.734,0C73.318,0,5.454,67.354,5.454,150.143c0,26.777,7.166,52.988,20.741,75.928L0.212,302.716   c-0.484,1.429-0.124,3.009,0.933,4.085C1.908,307.58,2.943,308,4,308c0.405,0,0.813-0.061,1.211-0.188l79.92-25.396   c21.87,11.685,46.588,17.853,71.604,17.853C240.143,300.27,308,232.923,308,150.143C308,67.354,240.143,0,156.734,0z    M156.734,268.994c-23.539,0-46.338-6.797-65.936-19.657c-0.659-0.433-1.424-0.655-2.194-0.655c-0.407,0-0.815,0.062-1.212,0.188   l-40.035,12.726l12.924-38.129c0.418-1.234,0.209-2.595-0.561-3.647c-14.924-20.392-22.813-44.485-22.813-69.677   c0-65.543,53.754-118.867,119.826-118.867c66.064,0,119.812,53.324,119.812,118.867   C276.546,215.678,222.799,268.994,156.734,268.994z"/>
                        </g>
                    </svg>
                    Whatsapp
                    <a class=" text-gray-300 hover:text-gray-500 dark:text-gray-400 dark:hover:text-gray-200 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href="https://wa.me/919911574941">919911574941</a>   
                </p>
            </div>
        </div>
        <div class="col-span-full md:col-span-4 md:mx-auto">
            <address class="font-medium not-italic gap-2 text-gray-400 flex flex-col flex-wrap">
                <span class="text-xs font-semibold text-gray-300 uppercase dark:text-gray-100">Address </span>
                {
                    contactInfo.address.map((item, index) => (
                    
                    <p class="text-gray-300 inline-flex flex-wrap gap-x-2 dark:text-gray-400  dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600">
                        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" width="24" height="24" > <g id="SVGRepo_bgCarrier" stroke-width="0"></g> <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round" ></g> <g id="SVGRepo_iconCarrier">
                            <path ill-rule="evenodd"clip-rule="evenodd"d="M2 2V22H22V2H2ZM4 4H20V20H4V4ZM10 6H14V18H10V6ZM6 8H8V16H6V8ZM16 8H18V16H16V8ZM6 18V20H8V18H6ZM10 18V20H14V18H10ZM16 18V20H18V18H16Z"fill="currentColor"></path>
                        </g>
                    </svg>
                    { index === 1 ?
                        <span class="text-gray-400">Service Center</span> : <span class="text-gray-400">Headquaters</span> }
                        {item}
                    </p>
                    ))
                }
            </address>
        </div>
        <div class="col-span-full md:col-span-4 md:mx-auto">
            <div class="grid gap-2">
                <p class="text-xs font-semibold text-gray-300 uppercase dark:text-gray-100">Email:</p>
                
                <p class="font-medium inline-flex gap-x-2 text-gray-400">
                    <svg class="w-5 h-5 text-gray-200 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 2-8.4 7.05a1 1 0 0 1-1.2 0L1 2m18 0a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1m18 0v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2"/>
                    </svg>
                    Sales: 
                    <a class="text-gray-300 hover:text-gray-500 dark:text-gray-400 dark:hover:text-gray-200 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href="mailto: info@jainhydraulics.com">info@jainhydraulics.com</a>
                </p>
                <p class="font-medium inline-flex gap-x-2 text-gray-400">
                    <svg class="w-5 h-5 text-gray-200 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 2-8.4 7.05a1 1 0 0 1-1.2 0L1 2m18 0a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1m18 0v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2"/>
                    </svg>
                    Support: 
                    <a class="text-gray-300 hover:text-gray-500 dark:text-gray-400 dark:hover:text-gray-200 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href="mailto: support@jainhydraulics.com">support@jainhydraulics.com</a>
                    
                </p>
            </div>
        </div>
    </div>
</footer>