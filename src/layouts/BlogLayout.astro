---

import type { ImageMetadata } from 'astro';
import { Image } from "astro:assets";

const { frontmatter } = Astro.props;
import Layout from "./Layout.astro";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const images = import.meta.glob<{ default: ImageMetadata }>('/src/images/blog/*.{jpeg,jpg,png,gif}')

if (!images[frontmatter.imagePath]) throw new Error(`"${frontmatter.imagePath}" does not exist in glob: "/src/images/blog*.{jpeg,jpg,png,gif}"`);

---

<Layout title={frontmatter.title} description={frontmatter.description} canonical={canonicalURL}>

    <!-- Blog Article -->
    <div class="max-w-3xl px-4 pt-6 lg:pt-10 pb-12 sm:px-6 lg:px-8 mx-auto">

        <a href="/blog/" class="hover:text-gray-600 text-gray-900 disabled:opacity-50 disabled:pointer-events-none dark:text-gray-400 dark:hover:text-white dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600">
            <button type="button" class="mb-4 inline-flex items-center gap-x-2 text-md font-semibold rounded-lg">
                <svg class="w-[8px] h-[8px]  dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 8 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 1 1.3 6.326a.91.91 0 0 0 0 1.348L7 13"/>
                </svg>
                Insights
            </button>
        </a>

        <div class="max-w-2xl">
            <!-- Content -->
            <div class="space-y-5 md:space-y-8 prose prose-slate prose-a:text-blue-600 prose-a:inline-flex fprose-a:ont-medium prose-a:disabled:opacity-50 prose-a:disabled:pointer-events-none prose-a:no-underline hover:prose-a:text-blue-400">
                <Image src={images[frontmatter.imagePath]()} alt="ai generated" />
                 <slot />
                
                <div>
                    {
                        
                        frontmatter.tags.map((item) => (
                            
                            <a class="m-1 inline-flex items-center gap-1.5 py-2 px-3 rounded-full text-sm bg-gray-100 text-gray-800 hover:bg-gray-200 dark:bg-gray-800 dark:hover:bg-gray-700 dark:text-gray-200 dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href={`/tags/${item}`}>
                                {item}
                            </a>
                            
                        
                        ))
                        
                    }
                </div>
            </div>
            <!-- End Content -->
        </div>
    </div>
    <!-- End Blog Article -->
    
</Layout>
